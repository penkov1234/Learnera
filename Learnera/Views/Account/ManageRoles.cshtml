@model Learnera.Models.UserRoleDTO
@{
    ViewBag.Title = "Manage roles";
}

<div class="row">
    <div class="container">
        @using (Html.BeginForm(Html.BeginForm("AddUserToRole", "Account", FormMethod.Post, new { id = "form", enctype = "multipart/form-data" })))
        {

            <div class="form-group">
                @Html.DropDownListFor(model => model.chosenEmail, new SelectList(Model.userEmails), htmlAttributes: new { @class = "form-control col-md-4 mt-5" })
            </div>

            <div class="form-group">
                @Html.DropDownListFor(model => model.chosenRole, new SelectList(Model.roles), htmlAttributes: new { @class = "form-control col-md-4" })
            </div>

            <div class="mt-3">
                <input type="submit" value="Save" class="btn btn-primary col-3 btnCreate" />
            </div>
        }
    </div>
</div>
